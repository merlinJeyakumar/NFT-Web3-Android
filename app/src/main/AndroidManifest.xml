<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.nativedevps.hashe"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name="com.nativedevps.hashe.main.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name="com.nativedevps.hashe.main.ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nativedevps.hashe.main.ui.main.MainActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.nativedevps.hashe.main.ui.example_list.ExampleListActivity"
            android:configChanges="orientation"
            android:enabled="true"
            android:exported="true" />
        <activity android:name=".main.ui.dapp.DappActivity" />
        <activity android:name=".main.ui.ipfs.IpfsActivity" />
    </application>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>